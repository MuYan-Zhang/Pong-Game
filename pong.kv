<PongBall>:
    size: 13, 13
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 15, 100
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<PowerUp>:
    size: 30, 30
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<PongWidget>:
    ball: pong_ball
    playerL: pL
    playerR: pR
    power: pu
    gover_msg: gover

    Label:
        font_size: 70
        center_x: root.width/4
        top: root.height/3*2
        text: str(root.playerL.score)

    Label:
        font_size: 70
        center_x: root.width/4*3
        top: root.height/3*2
        text: str(root.playerR.score)

    Label:
        id: gover
        font_size: 30
        center_x: root.width/2
        top: root.height/3
        text: "GAME OVER, PRESS 'R' TO RESTART"
        color: 1,0,0,0

    PongBall:
        id: pong_ball
        center: root.center

    PongPaddle:
        id: pL
        x: root.x
        center_y: root.center_y

    PongPaddle:
        id: pR
        # "self" refers to the paddle
        x: root.width - self.width
        center_y: root.center_y

    PowerUp:
        id: pu

